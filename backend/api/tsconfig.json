{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "../types"
    ]
  },
  "include": [
    "src",
    "types",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "./prisma/seed.ts",
  ],
}
